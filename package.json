{
  "name": "label-sync",
  "repository": "https://github.com/maticzav/label-sync.git",
  "private": true,
  "scripts": {
    "build": "node scripts/build.js",
    "build-clean": "rm -rf ./packages/*/dist",
    "clean-all": "rm -rf ./node_modules && rm -rf ./packages/*/node_modules && yarn build-clean",
    "coverage": "yarn codecov",
    "postinstall": "yarn build",
    "release": "lerna publish --yes",
    "test": "yarn run build; NODE_ENV=test LOG_LEVEL=fatal jest",
    "now-build": "./scripts/publish_web.sh"
  },
  "devDependencies": {
    "@types/jest": "25.1.4",
    "chalk": "3.0.0",
    "codecov": "3.6.4",
    "execa": "3.4.0",
    "husky": "3.1.0",
    "jest": "25.1.0",
    "jest-serializer-ansi": "1.0.3",
    "lerna": "3.20.2",
    "prettier": "2.0.2",
    "pretty-quick": "2.0.1",
    "ts-jest": "25.1.0",
    "ts-node": "8.6.2",
    "typescript": "3.7.5"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "server",
      "web"
    ]
  }
}
