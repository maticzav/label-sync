{
  "name": "root",
  "repository": "https://github.com/maticzav/label-sync.git",
  "private": true,
  "scripts": {
    "build": "node scripts/build.js",
    "build-clean": "rm -rf ./packages/*/dist",
    "clean-all": "rm -rf ./node_modules && rm -rf ./packages/*/node_modules && yarn build-clean",
    "coverage": "yarn codecov",
    "postinstall": "husky install",
    "release": "lerna publish --yes",
    "test": "yarn run build; NODE_ENV=test LOG_LEVEL=fatal jest --runInBand",
    "g:prisma": "prisma",
    "g:tsc": "typescript",
    "g:tsn": "ts-node",
    "db:generate": "POSTGRESQL_URL='postgres://none' prisma generate",
    "db:migrate": "prisma migrate up --experimental"
  },
  "workspaces": [
    "packages/*",
    "server",
    "web"
  ],
  "devDependencies": {
    "@types/jest": "26.0.23",
    "chalk": "4.1.1",
    "codecov": "3.8.2",
    "execa": "5.1.1",
    "husky": "6.0.0",
    "jest": "27.0.4",
    "jest-serializer-ansi": "1.0.3",
    "lerna": "3.22.1",
    "prettier": "2.3.1",
    "pretty-quick": "3.1.1",
    "prisma": "^2.25.0",
    "ts-jest": "27.0.3",
    "ts-node": "10.0.0",
    "typescript": "4.3.4"
  }
}
